<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTDBMS | Students</title>
    <%- include("./partials/imports.ejs"); %>
  </head>
  <body>
    <%- include("./partials/nav.ejs") %>
    <h1>Homes</h1>

    <div
      class="chart-container"
      style="position: relative; height: 40vh; width: 80vw"
    >
      <canvas id="myChart"></canvas>
    </div>

    <script>
      const ctx = document.getElementById("myChart");
      const topTravelers = <%- JSON.stringify(topTravelers) %>;

      const studentNames = topTravelers.map((student) => student.name);
      const studentTravelTimes = topTravelers.map((student) => student.numTrips);


      new Chart(ctx, {
        type: "bar",
        data: {
          labels: studentNames,
          datasets: [
            {
              label: "# of trips",
              data: studentTravelTimes,
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });
    </script>
  </body>
</html>
